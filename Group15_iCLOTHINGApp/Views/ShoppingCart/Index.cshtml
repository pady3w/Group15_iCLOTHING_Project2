@model IEnumerable<Group15_iCLOTHINGApp.Models.ShoppingCart>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
    if (Request.UrlReferrer != null)
    {
        ViewBag.ReturnUrl = Request.UrlReferrer.ToString();
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iCLOTHING Web Store</title>
    <style>
        /* Inline CSS for cart page */
        body {
            font-family: Arial, sans-serif; /* Match the font-family of the navbar */
            background-color: #f9f9f9;
            padding: 20px;
        }

        h2 {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: border-box; /* Match the navbar gradient */
            background-color: rgb(0, 136, 180);
            color: black;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        a {
            display: inline-block;
            margin-bottom: 10px;
            padding: 5px 10px;
            background: linear-gradient(to right, #667eea, #764ba2); /* Match the navbar gradient */
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease; /* Add smooth transition */
        }

            a:hover {
                background: linear-gradient(to right, #5a3ec8, #6a82fb); /* Darken the gradient on hover */
            }
    </style>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <a href="@ViewBag.ReturnUrl">Back</a>
    <table class="table" cellspacing="5">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cartProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cartProductQty)
                </td>
            </tr>
        }
    </table>
</body>
</html>

@model IEnumerable<Group15_iCLOTHINGApp.Models.Category>

@{
    ViewBag.Title = "Categories";
    if (Request.UrlReferrer != null)
    {
        ViewBag.ReturnUrl = Request.UrlReferrer.ToString();
    }
}

@if (Session["UserID"] != null)
{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
else
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="../../Stylesheets/CategoryStyleSheet.css">
</head>
<h2>@ViewBag.Title</h2>
<a href="@ViewBag.ReturnUrl">Back</a>
<div class="category-container">
    <table class="table" cellspacing="5">
        <tr>
            <th>
                Category
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryDescription)
                </td>
                <td>
                    @Html.ActionLink("View", "Filter", "Product", new { categoryID = item.categoryID }, new { @class = "nav-link" })
                </td>
            </tr>
        }

    </table>
</div>

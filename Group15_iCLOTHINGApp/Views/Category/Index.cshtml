@model IEnumerable<Group15_iCLOTHINGApp.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>@ViewBag.Title</h2>
<table class="table" cellspacing="5">
    <tr>
        <th>
            Category
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.categoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoryDescription)
            </td>
            <td>
                @Html.ActionLink("View", "Filter", "Product", new { categoryID = item.categoryID }, new { @class = "nav-link" })
            </td>
        </tr>
    }

</table>

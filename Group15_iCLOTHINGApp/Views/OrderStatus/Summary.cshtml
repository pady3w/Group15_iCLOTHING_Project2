@using Group15_iCLOTHINGApp.Models;
@model Tuple<int, List<ShoppingCart>, string, string>
@{
    ViewBag.Title = "Summary";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
    decimal totalPrice = 0;
    foreach (var item in Model.Item2)
    {
        totalPrice += item.cartProductPrice * item.cartProductQty;
    }
    ViewBag.CartTotal = totalPrice;
}

<h2>Order #@Model.Item1 Summary</h2>
@Html.ActionLink("Back to Home", "Index", "Home");
<hr />
@Html.Label("Item Count")
<p>@Model.Item2.Count</p>
<br />
@Html.Label("Total")
<p>@ViewBag.CartTotal</p>
<br />
@Html.Label("Customer")
<p>@Model.Item3</p>
<br />
@Html.Label("Estimated Delivery")
<p>@Model.Item4</p>
